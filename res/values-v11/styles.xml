<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Base application theme for API 11+. This theme completely replaces
        AppBaseTheme from res/values/styles.xml on API 11+ devices.-->
        
    <style name="parksTheme" parent="@style/Theme.Sherlock.Light">
        <item name="android:actionBarStyle">@style/MyActionBarStyle</item>
	    <item name="android:windowBackground">@android:color/white</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Parkstheme</item>
        <item name="android:actionBarTabTextStyle">@style/MyTabTextStyle.parkstheme</item>
        <item name="actionBarTabTextStyle">@style/MyTabTextStyle.parkstheme</item>
    </style>

    <style name="MyActionBarStyle" parent="@style/Widget.Sherlock.ActionBar">
        <item name="android:titleTextStyle">@style/text</item>
       	<item name="android:displayOptions">showTitle</item>
        <item name="android:background">#E8E8E7</item>
    </style>

    
    <style name="ActionBarTabStyle.Parkstheme" parent="@style/Widget.Sherlock.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_example</item>
    </style>

   <style name="text" parent="style/TextAppearance.Sherlock.Widget.ActionBar.Title">
    <item name="android:textColor">#000000</item>
  </style>
    
   <style name="MyTabTextStyle.parkstheme" parent="@android:style/TextAppearance" >
	    <item name="android:textColor">@color/my_color_selector</item>
	    <item name="android:textSize">18sp</item>
	</style>
 
</resources>